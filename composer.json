{
  "name": "invisiblesmiley/youtube-apitools",
  "description": "YouTube API tools",
  "license": "proprietary",
  "require": {
    "php": "^8.4",
    "google/apiclient": "^2.0",
    "ramsey/collection": "^2.1",
    "symfony/dotenv": "^7.3"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^3.0",
    "brianium/paratest": "^7.14",
    "ergebnis/composer-normalize": "^2.48",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^12.4",
    "roave/security-advisories": "dev-latest",
    "rregeer/phpunit-coverage-check": "^0.3.1",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "InvisibleSmiley\\YouTubeApiTools\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "InvisibleSmiley\\YouTubeApiTools\\Test\\": "test"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@phpcs",
      "@phpstan",
      "@check-coverage"
    ],
    "check-coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --coverage-clover data/phpunit/clover.xml",
      "coverage-check data/phpunit/clover.xml 15"
    ],
    "phpcs": "phpcs --standard=PSR12 src",
    "phpstan": "phpstan analyze --no-progress",
    "serve-playground": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 -t playground"
    ],
    "test": "paratest"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer run phpcs",
        "composer run phpstan"
      ],
      "pre-push": [
        "composer run check-coverage"
      ]
    }
  }
}
